<!DOCTYPE html>
<html lang="en">


<body>
    <%- include('../layout/head')  %>
    <%- include('../layout/header')  %>
    <div class="container">
        <div class="image">
            <img src="<%= oneBook.image_url%>" alt="">
        </div>
        <div class="title-and-author">
            <h3>
                <%= oneBook.title%>
            </h3>
            <ul>

                <li>
                    <%= oneBook.author%>
                </li>

            </ul>
        </div>

        <div class="description">
            <p>
                <%= oneBook.description%>
                <br>
                <br>
                <%= oneBook.isbn%>
            </p>

            
        </div>


    </div>

    <div class="button-div">
        <button class="open-button" onclick="openForm()">Update details</button>


        <div class="form-popup" id="myForm">
            <%- include('../layout/form')  %>
        </div>


        <form action="/delete/<%= oneBook.id %>?_method=DELETE" method="POST">
            <button type="submit" class="deleteBtn">Delete Book!</button>
        </form>
    </div>
    <script>
        function myFunction() {
          var x = document.getElementById("myLinks");
          if (x.style.display === "block") {
            x.style.display = "none";
          } else {
            x.style.display = "block";
          }
        }

        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
             document.getElementById("myForm").style.display = "none";
        }
    </script>
</body>

</html>